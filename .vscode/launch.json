{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI (uv)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/uvicorn",
            "args": [
                "main:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
